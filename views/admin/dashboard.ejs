        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #fff;
        }

        /* Tables */
        .data-table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 12px;
            overflow: hidden;
        }

        .data-table th {
